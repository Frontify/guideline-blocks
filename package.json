{
    "name": "root",
    "private": true,
    "scripts": {
        "build": "npm run build:block-settings && npm run build:shared",
        "build:block-settings": "npm -C packages/block-settings run build",
        "build:shared": "npm -C packages/shared run build",
        "lint": "pnpm --stream --filter {packages/**} --filter {examples/**} --parallel lint",
        "lint:fix": "pnpm --stream --filter {packages/**} --filter {examples/**} --parallel lint:fix",
        "prettier": "pnpm --stream --filter {packages/**} --filter {examples/**} --parallel prettier",
        "prettier:fix": "pnpm --stream --filter {packages/**} --filter {examples/**} --parallel prettier:fix",
        "publish:block-settings": "cd packages/block-settings && pnpm publish",
        "test": "npm run test:unit && npm run test:components",
        "test:components": "cypress run-ct",
        "test:components:browser": "cypress open-ct",
        "test:unit": "vitest run",
        "test:unit:watch": "vitest",
        "typecheck": "pnpm --stream --filter {packages/**} --filter {examples/**} --parallel typecheck"
    },
    "devDependencies": {
        "@babel/core": "7.18.10",
        "@cypress/react": "5.12.5",
        "@cypress/vite-dev-server": "2.2.3",
        "@testing-library/react-hooks": "8.0.1",
        "@types/node": "17.0.31",
        "@types/react": "17.0.47",
        "@types/react-dom": "17.0.17",
        "@vitejs/plugin-react": "1.3.2",
        "cypress": "9.7.0",
        "cypress-real-events": "1.7.1",
        "happy-dom": "^6.0.4",
        "postcss": "8.4.13",
        "tailwindcss": "3.1.8",
        "ts-node": "10.9.1",
        "typescript": "4.7.4",
        "vite": "2.9.15",
        "vitest": "0.20.3"
    },
    "dependencies": {
        "@frontify/fondue": "11.0.0",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    }
}
