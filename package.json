{
    "name": "root",
    "private": true,
    "scripts": {
        "build": "npm run build:block-settings && npm run build:shared",
        "build:block-settings": "npm -C packages/block-settings run build",
        "build:shared": "npm -C packages/shared run build",
        "lint:fix": "pnpm --stream --filter {packages} --parallel lint:fix",
        "lint": "pnpm --stream --filter {packages} --parallel lint",
        "prettier:fix": "pnpm --stream --filter {packages} --parallel prettier:fix",
        "prettier": "pnpm --stream --filter {packages} --parallel prettier",
        "publish:block-settings": "cd packages/block-settings && pnpm publish",
        "test:components:browser": "cypress open-ct",
        "test:components": "pnpx cypress run-ct --browser chrome --record --parallel --group component-tests --tag component-tests",
        "test:unit": "pnpm --stream --filter {packages} --parallel test",
        "test": "pnpm run test:unit && pnpm run test:components",
        "typecheck": "pnpm --stream --filter {packages} --parallel typecheck"
    },
    "devDependencies": {
        "@babel/core": "7.17.10",
        "@cypress/react": "5.12.4",
        "@cypress/vite-dev-server": "2.2.2",
        "@types/node": "17.0.31",
        "@types/react": "17.0.44",
        "@types/react-dom": "17.0.16",
        "@vitejs/plugin-react": "1.3.1",
        "cypress": "9.6.0",
        "cypress-real-events": "1.7.0",
        "husky": "7.0.4",
        "typescript": "4.6.4",
        "ts-node": "10.7.0",
        "vite": "2.9.6"
    },
    "dependencies": {
        "@frontify/arcade": "7.1.1",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    }
}
