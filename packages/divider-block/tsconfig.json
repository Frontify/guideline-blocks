{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "jsx": "react-jsx",
        "lib": ["ES2021", "DOM"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["@testing-library/jest-dom"]
    },
    "include": ["src/**/*", "../shared/src/**/*"],
    "exclude": ["node_modules", "dist"]
}
