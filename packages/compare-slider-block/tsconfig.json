{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "jsx": "react-jsx",
        "lib": ["ES2021", "DOM"],
        "types": ["cypress", "cypress-real-events", "@4tw/cypress-drag-drop"],
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "../shared/src/**/*"],
    "exclude": ["dist", "node_modules"]
}
