{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "ES2022",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "jsx": "react-jsx",
        "lib": ["ES2021", "DOM"],
        "types": ["@testing-library/jest-dom"],
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "../shared/src/**/*"],
    "exclude": ["dist", "node_modules"]
}
