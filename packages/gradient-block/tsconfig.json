{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["ES2021", "DOM"],
        "module": "ES2022",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "types": ["@testing-library/jest-dom", "cypress", "cypress-real-events"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*", "../shared/src/**/*"]
}
