{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noUnusedLocals": true,
        "strict": true,
        "target": "ES2020",
        "jsx": "react",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": ["cypress", "cypress-real-events", "@4tw/cypress-drag-drop"],
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
