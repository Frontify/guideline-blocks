{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": ["jest"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
