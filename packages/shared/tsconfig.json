{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noUnusedLocals": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "types": ["cypress", "cypress-real-events", "@4tw/cypress-drag-drop"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}
